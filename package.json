{
  "name": "transkriptor",
  "version": "0.1.0",
  "private": true,
  "description": "Lokal transskriberingssoftware til lange interviews",
  "main": "dist-electron/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:main": "tsup electron/main.ts electron/preload.ts --format cjs --sourcemap --watch --external electron --out-dir dist-electron",
    "dev:electron": "wait-on tcp:5173 file:dist-electron/main.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "prepare:bundle": "node scripts/prepare-binaries.mjs && bash scripts/build-worker.sh",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsup electron/main.ts electron/preload.ts --format cjs --sourcemap --external electron --out-dir dist-electron",
    "typecheck": "tsc --noEmit",
    "start": "electron .",
    "dist": "npm run prepare:bundle && npm run build && electron-builder --mac && bash scripts/standardize-downloads.sh",
    "dist:app": "npm run prepare:bundle && npm run build && electron-builder --mac dir",
    "standardize:downloads": "bash scripts/standardize-downloads.sh"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "dk.transkriptor.desktop",
    "productName": "Transkriptor",
    "mac": {
      "icon": "build-assets/app-icon.icns",
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "title": "Transkriptor Installer",
      "iconSize": 120,
      "window": {
        "width": 760,
        "height": 440
      },
      "contents": [
        {
          "x": 220,
          "y": 220,
          "type": "file"
        },
        {
          "x": 540,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build-assets/worker",
        "to": "worker",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build-assets/bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "python",
        "to": "python",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
